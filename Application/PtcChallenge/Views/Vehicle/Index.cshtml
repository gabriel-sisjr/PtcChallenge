@model IEnumerable<Domain.Models.VehicleModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Vehicles</h1>

<p>
    <a asp-action="Create" asp-controller="Vehicle">Create New</a>
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Renavam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearCreation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearModel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quilometers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Renavam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearCreation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quilometers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Sell Vehicle", "SellVehicle", new { id = item.Id }) | 
                        @Html.ActionLink("Invalidate Vehicle", "InvalidateVehicle", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div id="divMsg"></div>
}
else
{
    <div class="alert alert-warning text-center">
        <p>No Content!</p>
    </div>
}